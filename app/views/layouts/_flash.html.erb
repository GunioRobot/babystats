      <% if key == :error and message.is_a?(Array) %>
        <%= build_message_div(key, message) %>
      <% else %>
        <div class="alert-message <%= key %>" data-alert><a class="close" href="#">Ã—</a><p><%= message %></p></div>
      <% end %>
    </div>
  <% end %>
</div>
