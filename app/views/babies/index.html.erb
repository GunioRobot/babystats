<h1>Listing babies</h1>

<table>
  <tr>
    <th>User</th>
    <th>Birthday</th>
    <th>Gender</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @babies.each do |baby| %>
  <tr>
    <td><%= baby.user_id %></td>
    <td><%= baby.birthday %></td>
    <td><%= baby.gender %></td>
    <td><%= baby.name %></td>
    <td><%= link_to 'Show', baby %></td>
    <td><%= link_to 'Edit', edit_baby_path(baby) %></td>
    <td><%= link_to 'Destroy', baby, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

